<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/black"
        android:ems="10"
        android:gravity="right|center"
        android:text="0"
        android:textColor="@color/cardview_light_background"
        android:textSize="40pt"
        tools:ignore="RtlHardcoded" />
    <TextView
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="30pt"
        android:layout_weight="1"
        android:background="@color/black"
        android:ems="10"
        android:gravity="right|center"
        android:text=" "
        android:textColor="@color/cardview_light_background"
        android:textSize="20pt"
        tools:ignore="RtlHardcoded" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="409dp"
        android:background="@color/p_100"
        >


        <TableRow
            android:layout_marginTop="-1pt"
            android:layout_marginBottom="-4pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:textSize="19pt"
                android:backgroundTint="@color/g_100"
                android:id="@+id/ButtAC"
                android:layout_width="30pt"
                android:layout_height="90dp"
                android:layout_marginEnd="1pt"
                android:layout_weight="1"
                android:onClick="numberEv"
                android:text="AC">
            </Button>


            <Button
                android:id="@+id/ButtPm"
                android:layout_width="25pt"
                android:layout_height="90dp"
                android:layout_marginEnd="1pt"
                android:layout_weight="1"
                android:backgroundTint="@color/g_100"
                android:onClick="numberEv"
                android:text="+/-"
                android:textSize="19pt" />


            <Button
                android:textSize="19pt"
                android:backgroundTint="@color/O_100"
                android:id="@+id/Buttdiv"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_marginEnd="1pt"
                android:layout_weight="1"
                android:onClick="Opper"
                android:text="/">
            </Button>

        </TableRow>



        <TableRow
            android:layout_marginBottom="-4pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/Butt7"
                android:layout_width="30pt"
                android:layout_height="90dp"
                android:layout_marginEnd="1pt"
                android:layout_weight="1"
                android:backgroundTint="@color/g_100"
                android:onClick="numberEv"
                android:text="7"
                android:textSize="19pt" />

            <Button
                android:onClick="numberEv"
                android:textSize="19pt"
                android:backgroundTint="@color/g_100"
                android:id="@+id/Butt8"
                android:layout_width="30pt"
                android:layout_height="90dp"
                android:layout_marginEnd="1pt"
                android:layout_weight="1"
                android:text="8">
            </Button>

            <Button
                android:onClick="numberEv"
                android:textSize="19pt"
                android:backgroundTint="@color/g_100"
                android:id="@+id/Butt9"
                android:layout_width="30pt"
                android:layout_height="90dp"
                android:layout_marginEnd="1pt"
                android:layout_weight="1"
                android:text="9">
            </Button>

            <Button
                android:textSize="19pt"
                android:backgroundTint="@color/O_100"
                android:id="@+id/ButtMul"
                android:layout_width="104dp"
                android:layout_height="90dp"
                android:layout_marginEnd="1pt"
                android:layout_weight="1"
                android:onClick="Opper"
                android:text="*">
            </Button>

        </TableRow>



        <TableRow
            android:layout_marginBottom="-4pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:onClick="numberEv"
                android:textSize="19pt"
                android:backgroundTint="@color/g_100"
                android:id="@+id/Butt4"
                android:layout_width="30pt"
                android:layout_height="90dp"
                android:layout_marginEnd="1pt"
                android:layout_weight="1"
                android:text="4">
            </Button>

            <Button
                android:onClick="numberEv"
                android:textSize="19pt"
                android:backgroundTint="@color/g_100"
                android:id="@+id/Butt5"
                android:layout_width="30pt"
                android:layout_height="90dp"
                android:layout_marginEnd="1pt"
                android:layout_weight="1"
                android:text="5">
            </Button>

            <Button
                android:onClick="numberEv"
                android:textSize="19pt"
                android:backgroundTint="@color/g_100"
                android:id="@+id/Butt6"
                android:layout_width="30pt"
                android:layout_height="90dp"
                android:layout_marginEnd="1pt"
                android:layout_weight="1"
                android:text="6">
            </Button>

            <Button
                android:textSize="19pt"
                android:backgroundTint="@color/O_100"
                android:id="@+id/ButtMi"
                android:layout_width="104dp"
                android:layout_height="90dp"
                android:layout_marginEnd="1pt"
                android:layout_weight="1"
                android:onClick="Opper"
                android:text="-">
            </Button>

        </TableRow>


        <TableRow
            android:layout_marginBottom="-4pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:onClick="numberEv"
                android:textSize="19pt"
                android:backgroundTint="@color/g_100"
                android:id="@+id/Butt1"
                android:layout_width="30pt"
                android:layout_height="90dp"
                android:layout_marginEnd="1pt"
                android:layout_weight="1"
                android:text="1">
            </Button>

            <Button
                android:onClick="numberEv"
                android:textSize="19pt"
                android:backgroundTint="@color/g_100"
                android:id="@+id/Butt2"
                android:layout_width="30pt"
                android:layout_height="90dp"
                android:layout_marginEnd="1pt"
                android:layout_weight="1"
                android:text="2">
            </Button>

            <Button
                android:onClick="numberEv"
                android:textSize="19pt"
                android:backgroundTint="@color/g_100"
                android:id="@+id/Butt3"
                android:layout_width="30pt"
                android:layout_height="90dp"
                android:layout_marginEnd="1pt"
                android:layout_weight="1"
                android:text="3">
            </Button>

            <Button
                android:textSize="19pt"
                android:backgroundTint="@color/O_100"
                android:id="@+id/ButtPlu"
                android:layout_width="104dp"
                android:layout_height="90dp"
                android:layout_marginEnd="1pt"
                android:layout_weight="1"
                android:onClick="Opper"
                android:text="+">
            </Button>

        </TableRow>

        <TableRow
            android:layout_marginBottom="-4pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:onClick="numberEv"
                android:textSize="19pt"
                android:backgroundTint="@color/g_100"
                android:id="@+id/Butt0"
                android:layout_width="46pt"
                android:layout_height="90dp"
                android:layout_marginEnd="1pt"
                android:layout_weight="2"
                android:text="0">
            </Button>

            <Button
                android:textSize="19pt"
                android:backgroundTint="@color/g_100"
                android:id="@+id/ButtPo"
                android:layout_width="46pt"
                android:layout_height="90dp"
                android:layout_marginEnd="1pt"
                android:layout_weight="1"
                android:onClick="numberEv"
                android:text=".">
            </Button>

            <Button
                android:textSize="19pt"
                android:backgroundTint="@color/O_100"
                android:id="@+id/ButtEq"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_marginEnd="1pt"
                android:layout_weight="1"
                android:onClick="equal"
                android:text="=">
            </Button>

        </TableRow>



    </TableLayout>
</LinearLayout>